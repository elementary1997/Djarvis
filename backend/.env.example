# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
DJANGO_SETTINGS_MODULE=config.settings

# Database
POSTGRES_DB=djarvis
POSTGRES_USER=djarvis_user
POSTGRES_PASSWORD=djarvis_password
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://djarvis_user:djarvis_password@db:5432/djarvis

# Redis
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# CORS
CORS_ALLOWED_ORIGINS=http://localhost,http://localhost:3000,http://127.0.0.1

# Security
CSRF_TRUSTED_ORIGINS=http://localhost,http://127.0.0.1

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# Sandbox Settings
SANDBOX_MEMORY_LIMIT=512m
SANDBOX_CPU_LIMIT=1.0
SANDBOX_TIMEOUT=300
SANDBOX_MAX_CONTAINERS=50

# Email (опционально)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@djarvis.local

# Sentry (опционально)
SENTRY_DSN=

# Logging
LOG_LEVEL=INFO